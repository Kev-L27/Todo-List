<%- include("partials/header.ejs") %>


<h1 class="title">ToDo Work List</h1>
<div>
	<ul>
		<% if (locals.workItems) { %>
			<% for (const elem of workItems) { %>
				<div class="item">
					<input type="checkbox">
					<p><%= elem %></p>
				</div>
			<% } %>
		<% } %>
		<li>
			<form action="/submitWork" method="POST">
			<input type="text" name="newItem" placeholder="New Item">
			<button type="submit" name="newList">+</button>
			</form>
		</li>
		<li>
			<form action="/deleteWork" method="POST">
				<button type="submit" name="RemoveList">Clear List</button>
			</form>
		</li>
	</ul>
</div>